<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="20" xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.triviagame.controller.WelcomeController"
      prefHeight="400" prefWidth="600">
    <children>
        <Label text="Welcome to the Trivia Game!" style="-fx-font-size: 24;" />
        <Label text="Enter your name to start the game:" style="-fx-font-size: 16;" />
        <TextField fx:id="nameField" maxWidth="200" />
        <Button text="Start Game" onAction="#handleStartGame" style="-fx-font-size: 16; -fx-padding: 10;" />
    </children>
</VBox>
