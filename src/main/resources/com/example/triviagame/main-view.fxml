<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>


<VBox alignment="TOP_CENTER" prefHeight="507.0" prefWidth="556.0" spacing="20.0" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.triviagame.controller.MainController">

                    <padding>
    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
  </padding>

                 <HBox alignment="TOP_CENTER" prefHeight="358.0" prefWidth="516.0">
      <VBox>
         <children>
            <HBox prefHeight="334.0" prefWidth="330.0">
               <children>
                  <HBox>
                     <children>
                      <Label fx:id="userNameLabel" text="User Name:" />
                      <Label fx:id="userNameValue" />
                      <Label fx:id="totalPointsLabel" prefWidth="66.0" text="Total Points:" />
                      <Label fx:id="totalPointsValue" />
                      <Label fx:id="countdownLabel" text="Countdown:" />
                      <Label fx:id="countdownValue" />
                     </children>
                  </HBox>
               </children>
            </HBox>
         <HBox alignment="CENTER" prefHeight="537.0" prefWidth="330.0" spacing="20.0">
           <Label fx:id="firstObjectLabel" />
           <Label fx:id="secondObjectLabel" />
         </HBox>
        <HBox alignment="CENTER" spacing="10.0">
          <Button fx:id="answerButton1" onAction="#choice1ButtonClick" text="Answer 1" />
          <Button fx:id="answerButton2" onAction="#choice2ButtonClick" text="Answer 2" />
          <Button fx:id="answerButton3" onAction="#choice3ButtonClick" text="Answer 3" />
          <Button fx:id="answerButton4" onAction="#choice4ButtonClick" text="Answer 4" />
        </HBox>
         </children>
      </VBox>
   <VBox alignment="CENTER_RIGHT" prefHeight="358.0" prefWidth="148.0" style="-fx-background-color: yellow; -fx-padding: 10;">
     <Label fx:id="timestampLabel" />
   </VBox>
  </HBox>

                                <Button alignment="CENTER" contentDisplay="CENTER" onAction="#GenerateReportButtonClick" prefWidth="172.0" text="Generate Report" />
</VBox>
